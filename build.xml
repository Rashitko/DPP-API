<?xml version="1.0" encoding="UTF-8" ?>
<project name="dpp" default="all" basedir=".">
    <property name="src.dir" value="${basedir}/src"/>
    <property name="build.dir" value="${basedir}/build"/>
    <property name="dist.dir" value="${basedir}/dist"/>
    <property name="doc.dir" value="${basedir}/doc"/>
    <property name="lib.dir" value="${basedir}/lib"/>
    <property name="libName" value="DPPParser"/>
    <property name="libVersion" value="1.0"/>

    <target name="clean">
        <property name="myclasspath" refid="custom.classpath"/>
        <echo message="Classpath = ${myclasspath}"/>
        <echo>${java.home}</echo>
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>

    <target name="init">
        <mkdir dir="${src.dir}"/>
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${dist.dir}"/>
    </target>

    <!-- Define the CLASSPATH -->
    <path id="custom.classpath">
        <pathelement location="${java.home}/lib/rt.jar"/>
    </path>

    <target name="compile" depends="clean, init">
        <javac includeantruntime="false" srcdir="${src.dir}"
               destdir="${build.dir}" classpathref="custom.classpath">
            <classpath>
                <deps>
                    <dependency name="asm:asm:3.0"/>
                </deps>
            </classpath>
        </javac>

    </target>

    <target name="jar" depends="compile">
        <jar jarfile="${dist.dir}/${libName}-${libVersion}.jar"
             basedir="${build.dir}"/>
    </target>

    <target name="javadoc">
        <javadoc sourcepath="${src.dir}" destdir="${doc.dir}"/>
    </target>

    <target name="compile-tests">

    </target>

    <target name="run-tests" depends="compile-tests">

    </target>

    <target name="all" depends="jar, run-tests">

    </target>
</project>